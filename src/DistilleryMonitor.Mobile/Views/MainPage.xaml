<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DistilleryMonitor.Mobile.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:DistilleryMonitor.Mobile.Components"
             Title=""
             BackgroundColor="#1a1a2e"
             Shell.TitleColor="White">

    <ScrollView>
        <Grid Padding="20,15,20,0" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />              <!-- Status Header -->
                <RowDefinition Height="Auto" />              <!-- Sensor Cards -->
                <RowDefinition Height="300" />               <!-- Graf Sektion (lite högre) -->
                <RowDefinition Height="Auto" />              <!-- Button -->
                <RowDefinition Height="Auto" />              <!-- Loading Indicator -->
            </Grid.RowDefinitions>

            <!-- Status Header -->
            <Frame Grid.Row="0"
                   BackgroundColor="#0d1421"
                   CornerRadius="15"
                   Padding="20">
                <StackLayout>
                    <Label Text="Temperaturövervakning"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding ConnectionStatus}"
                           FontSize="16"
                           TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>
            </Frame>

            <!-- Sensor Cards med TemperatureCard Component -->
            <CollectionView Grid.Row="1"
                           ItemsSource="{Binding Sensors}"
                           BackgroundColor="Transparent">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <components:TemperatureCard Sensor="{Binding}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Graf Sektion -->
            <Frame Grid.Row="2"
                   BackgroundColor="#0d1421"
                   CornerRadius="15"
                   Padding="15"
                   Margin="0,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />                       <!-- Titel -->
                        <RowDefinition Height="Auto" />                       <!-- Färgkodad legend -->
                        <RowDefinition Height="*" />                          <!-- Graf area -->
                    </Grid.RowDefinitions>

                    <!-- Graf titel -->
                    <Label Grid.Row="0"
                           Text="📈 Historik (senaste 2h)"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0,0,0,5" />

                    <!-- Färgkodad sensor-legend -->
                    <StackLayout Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalOptions="Center"
                                Spacing="20"
                                Margin="0,0,0,10">

                        <!-- Kolv (Blå) -->
                        <StackLayout Orientation="Horizontal" Spacing="5">
                            <BoxView Color="#007acc" 
                                    WidthRequest="15" 
                                    HeightRequest="3" 
                                    VerticalOptions="Center" />
                            <Label Text="Kolv" 
                                  TextColor="#007acc" 
                                  FontSize="12" 
                                  FontAttributes="Bold"
                                  VerticalOptions="Center" />
                        </StackLayout>

                        <!-- Destillat (Grön) -->
                        <StackLayout Orientation="Horizontal" Spacing="5">
                            <BoxView Color="#28a745" 
                                    WidthRequest="15" 
                                    HeightRequest="3" 
                                    VerticalOptions="Center" />
                            <Label Text="Destillat" 
                                  TextColor="#28a745" 
                                  FontSize="12" 
                                  FontAttributes="Bold"
                                  VerticalOptions="Center" />
                        </StackLayout>

                        <!-- Kylare (Röd) -->
                        <StackLayout Orientation="Horizontal" Spacing="5">
                            <BoxView Color="#dc3545" 
                                    WidthRequest="15" 
                                    HeightRequest="3" 
                                    VerticalOptions="Center" />
                            <Label Text="Kylare" 
                                  TextColor="#dc3545" 
                                  FontSize="12" 
                                  FontAttributes="Bold"
                                  VerticalOptions="Center" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Graf container -->
                    <Border Grid.Row="2"
                            BackgroundColor="#1a1a2e"
                            Stroke="#333"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <components:CombinedTemperatureGraphView
                             x:Name="TemperatureGraph"
                            TemperatureData="{Binding HistoryData}"
                            BackgroundColor="Transparent" />
                    </Border>
                </Grid>
            </Frame>

            <!-- Uppdatera knapp -->
            <Button Grid.Row="3"
                    Text="🔄 Uppdatera Nu"
                    Command="{Binding RefreshDataCommand}"
                    BackgroundColor="#0f3460"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    Margin="0,0,0,0"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}" />

            <!-- Loading indicator -->
            <ActivityIndicator Grid.Row="4"
                               IsVisible="{Binding IsLoading}"
                               IsRunning="{Binding IsLoading}"
                               Color="#00d4aa"
                               HeightRequest="50" />
        </Grid>
    </ScrollView>
</ContentPage>
