<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DistilleryMonitor.Mobile.Views.SensorSettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding SensorName, StringFormat='{0} - Inställningar'}"
             BackgroundColor="#1a1a2e"
             Shell.TitleColor="Green"
             Shell.BackgroundColor="#0d1421"
             Shell.ForegroundColor="Green" >

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="{Binding SensorName, StringFormat='⚙️ {0} Inställningar'}" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Temperaturintervall -->
            <Frame BackgroundColor="#16213e" CornerRadius="15" Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="🌡️ Temperaturintervall"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="White" />

                    <!-- Optimal börjar vid -->
                    <Grid ColumnDefinitions="*,100">
                        <Label Grid.Column="0" Text="Optimal börjar vid:" TextColor="#ddd" VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                            Text="{Binding OptimalMin}"
                            Keyboard="Numeric"
                            TextColor="White"
                            BackgroundColor="#0f3460" />
                    </Grid>

                    <!-- Varning vid -->
                    <Grid ColumnDefinitions="*,100">
                        <Label Grid.Column="0" Text="Varning börjar vid:" TextColor="#ddd" VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                            Text="{Binding WarningTemp}"
                            Keyboard="Numeric"
                            TextColor="White"
                            BackgroundColor="#0f3460" />
                    </Grid>

                    <!-- Kritisk vid -->
                    <Grid ColumnDefinitions="*,100">
                        <Label Grid.Column="0" Text="Kritisk börjar vid:" TextColor="#ddd" VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                                Text="{Binding CriticalTemp}"
                                Keyboard="Numeric"
                                TextColor="White"
                                BackgroundColor="#0f3460" />
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Knappar -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="💾 Spara"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#0f3460"
                        TextColor="White"
                        CornerRadius="10" />
                <Button Grid.Column="1"
                        Text="🔄 Återställ"
                        Command="{Binding ResetCommand}"
                        BackgroundColor="#604020"
                        TextColor="White"
                        CornerRadius="10" />
            </Grid>

        </StackLayout>
    </ScrollView>

</ContentPage>
